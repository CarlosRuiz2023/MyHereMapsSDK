<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.here.sdk.mapview.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilsearch"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Buscar..."
            android:padding="@dimen/button_padding_default"
            app:boxCornerRadiusBottomStart="@dimen/circle_radius"
            app:boxCornerRadiusBottomEnd="@dimen/circle_radius"
            app:boxCornerRadiusTopEnd="@dimen/circle_radius"
            app:boxCornerRadiusTopStart="@dimen/circle_radius"
            app:endIconMode="clear_text"
            app:endIconDrawable="@drawable/ic_close"
            app:endIconTint="@color/colorPrimary"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxStrokeWidth="2dp"
            android:backgroundTint="@android:color/white"
            app:hintEnabled="true"
            app:helperText="Direccion"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CCFFFFFF"
                android:inputType="textPersonName"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSearch"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_zoom_in"
            android:onClick="searchExampleButtonClicked"
            app:backgroundTint="@color/white"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDraw"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_add_circle_outline"
            android:onClick="geocodeAnAddressButtonClicked"
            android:backgroundTint="@color/white"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/routeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        tools:visibility="gone">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tildireccion1"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:hint="Origen"
            android:padding="@dimen/button_padding_middle"
            app:boxCornerRadiusBottomStart="@dimen/circle_radius"
            app:boxCornerRadiusBottomEnd="@dimen/circle_radius"
            app:boxCornerRadiusTopEnd="@dimen/circle_radius"
            app:boxCornerRadiusTopStart="@dimen/circle_radius"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_gps_fixed"
            app:endIconTint="#009688"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxStrokeWidth="2dp"
            app:hintEnabled="true"
            app:helperText="Direccion origen"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/direccion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:inputType="textPersonName"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tildireccion2"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:hint="Destino"
            android:padding="@dimen/button_padding_middle"
            app:boxCornerRadiusBottomStart="@dimen/circle_radius"
            app:boxCornerRadiusBottomEnd="@dimen/circle_radius"
            app:boxCornerRadiusTopEnd="@dimen/circle_radius"
            app:boxCornerRadiusTopStart="@dimen/circle_radius"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_gps_fixed"
            app:endIconTint="@color/colorSecondary"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxStrokeWidth="2dp"
            app:hintEnabled="true"
            app:helperText="Direccion destino"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/direccion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:inputType="textPersonName"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_route"
            android:onClick="addRouteButtonClicked"
            android:backgroundTint="@color/white"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.card.MaterialCardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/turnIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_front_hand"
                        android:contentDescription="Icono de giro"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/message_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="3"
                        android:scrollbars="vertical"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Instrucciones de la ruta"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/stopSimulationButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detener Navegación"
                        app:cornerRadius="8dp"
                        app:backgroundTint="?attr/colorPrimary"
                        android:textColor="@android:color/white" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/releaseCameraButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Liberar Cámara"
                        app:cornerRadius="8dp"
                        app:backgroundTint="?attr/colorPrimary"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_padding_middle"
        android:src="@drawable/ic_gps_fixed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        android:onClick="localizar"
        app:backgroundTint="#2094F0"
        style="@style/Widget.MaterialComponents.FloatingActionButton"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDefault"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_padding_middle"
        app:icon="@drawable/ic_restart_alt"
        android:onClick="clearMapButtonClicked"
        app:backgroundTint="@color/material_dynamic_neutral_variant60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_padding_middle"
        android:src="@drawable/ic_restart_alt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        android:onClick="clearMapButtonClicked"
        style="@style/Widget.MaterialComponents.FloatingActionButton"/>-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabTraffic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_padding_middle"
        android:src="@drawable/ic_traffic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fabChangeMapStyle"
        app:backgroundTint="#2094F0"
        android:onClick="viewTrafficButtonClicked"
        style="@style/Widget.MaterialComponents.FloatingActionButton"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChangeMapStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_padding_middle"
        android:src="@drawable/ic_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fabGPS"
        app:backgroundTint="#2094F0"
        android:onClick="changeStyle"
        style="@style/Widget.MaterialComponents.FloatingActionButton"/>
    <include layout="@layout/dialog_address"
        android:id="@+id/datos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/menu_bottom_nav"
        android:background="#CC2094F0"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="@color/custom"
        app:elevation="@dimen/button_padding_middle"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <!--style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"-->
    <LinearLayout
        android:id="@+id/llCameraTargetDot"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:id="@+id/cameraTargetDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/red_dot" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/zonasLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:scrollbars="vertical"
            android:background="#CCFFFFFF"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnZona"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_add_circle_outline"
            android:onClick="addZona"
            app:backgroundTint="@color/white"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>